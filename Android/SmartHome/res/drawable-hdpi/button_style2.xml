<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#CCFF66" />
            <stroke
                android:width="1dp"
                android:color="#FF3300" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#CCFF66"
                android:endColor="#FF3300"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#CCFF66" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>